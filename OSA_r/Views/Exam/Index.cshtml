@model IEnumerable<Exams>

<div class="justify-content-center align-items-center">
    <div class="bg-white rounded shadow p-4">

        <h2 class="text-center mb-4">Exams List</h2>

        <a asp-action="Create" class="btn btn-primary btn-block mb-3">Create New Exam</a>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Exam Name</th>
                    <th>Instructor Id</th>
                    <th>Exam Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var exam in Model)
                {
                    <tr>
                        <td>@exam.ExamName</td>
                        <td>@exam.InstructorId</td>
                        <td>@exam.ExamDate</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@exam.ExamId" class="btn btn-info">Details</a>
                            <a asp-action="Update" asp-route-id="@exam.ExamId" class="btn btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@exam.ExamId" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
