@model LoginFormViewModel
@{
    var Msg = ViewData["Msg"];
}

<div class="login-container d-flex justify-content-center align-items-center h-100">
    <div class="login-form bg-white rounded shadow p-4">

        @if (Msg != null)
        {
            <p class="alert alert-danger">
                @Msg
            </p>
        }
        <h2 class="text-center mb-4">Please login to continue</h2>

        @using (Html.BeginForm("Login", "User", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Username)
                <br />
                @Html.EditorFor(model => model.Username, new { @class = "form-control border-primary m-3" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password)
                <br />
                @Html.PasswordFor(model => model.Password, new { @class = "form-control-sm"})
            </div>
            <br />
            <button type="submit" class="btn btn-primary btn-block">Login</button>
        }
    </div>
</div>