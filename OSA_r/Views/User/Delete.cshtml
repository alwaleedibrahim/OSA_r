@model DeleteUserFormViewModel

<div class="login-container d-flex justify-content-center align-items-center h-100">
    <div class="login-form bg-white rounded shadow p-4">

        <h2 class="text-center mb-4">Delete User</h2>

        <p class="alert alert-warning">Are you sure you want to delete this user?</p>

        <div>
            <dl class="table">
                <dt class="col-sm-2">Username:</dt>
                <dd class="col-sm-10">@Model.Username</dd>
                <dt class="col-sm-2">Email:</dt>
                <dd class="col-sm-10">@Model.Email</dd>
                <dt class="col-sm-2">Role:</dt>
                <dd class="col-sm-10">@Model.Role</dd>
            </dl>
            @using (Html.BeginForm("Delete", "User", new { id = Model.UserId }, FormMethod.Post))
            {
                @Html.HiddenFor(model => model.UserId)
                <input type="submit" value="Delete" class="btn btn-danger btn-block" />
                <a asp-action="Index" class="btn btn-secondary btn-block">Back to List</a>
            }
        </div>
    </div>
</div>

