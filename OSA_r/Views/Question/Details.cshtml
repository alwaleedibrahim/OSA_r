@model Questions

<div class="login-container d-flex justify-content-center align-items-center h-100">
    <div class="login-form bg-white rounded shadow p-4">

        <h2 class="text-center mb-4">Question Details</h2>

        <div>
            <dl class="table">
                <dt class="col-sm-2">Question Text:</dt>
                <dd class="col-sm-10">@Model.QuestionText</dd>
                <dt class="col-sm-2">Subject:</dt>
                <dd class="col-sm-10">@Model.Subject</dd>
                <dt class="col-sm-2">Instructor Id:</dt>
                <dd class="col-sm-10">@Model.InstructorId</dd>
                <dt class="col-sm-2">Correct Answer:</dt>
                <dd class="col-sm-10">@Model.CorrectAnswer</dd>
                <dt class="col-sm-2">Category:</dt>
                <dd class="col-sm-10">@Model.Category</dd>
                <dt class="col-sm-2">Topic:</dt>
                <dd class="col-sm-10">@Model.Topic</dd>
                <dt class="col-sm-2">Level:</dt>
                <dd class="col-sm-10">@Model.Level</dd>
            </dl>
            <a asp-action="Index" class="btn btn-secondary btn-block">Back to List</a>
        </div>
    </div>
</div>
