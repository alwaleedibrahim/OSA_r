@model DeleteQuestionFormViewModel

<div class="login-container d-flex justify-content-center align-items-center h-100">
    <div class="login-form bg-white rounded shadow p-4">

        <h2 class="text-center mb-4">Delete Question</h2>

        <p class="alert alert-warning">Are you sure you want to delete this question?</p>

        <div>
            <dl class="table">
                <dt class="col-sm-2">Question text:</dt>
                <dd class="col-sm-10">@Model.QuestionText</dd>
            </dl>
            @using (Html.BeginForm("Delete", "Question", new { id = Model.QuestionId }, FormMethod.Post))
            {
                @Html.HiddenFor(model => model.QuestionId)
                <input type="submit" value="Delete" class="btn btn-danger btn-block" />
                <a asp-action="Index" class="btn btn-secondary btn-block">Back to List</a>
            }
        </div>
    </div>
</div>
